    "express-async-errors": "^3.1.1",
    "http": "0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.0",
    "mongoose-unique-validator": "^3.0.0",
    "nodemon": "^2.0.15",
    "eslint": "^7.8.0",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1"
  },
  "eslintConfig": {
